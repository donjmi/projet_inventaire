<header>
	<nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-primary">
		<a class="navbar-brand" href="{{ path('app_home') }}">Ville de Pantin</a>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarNav">
			<ul class="navbar-nav ml-auto">
				<li class="nav-item">
					<a class="nav-link" href="{{ path('app_home') }}">
						<i class="fas fa-home"></i>
						Home
						<span class="sr-only">(current)</span>
					</a>
					{# <a class="nav-link" href="{{ path('home') }}"><i class="fas fa-home"></i> Home <span class="sr-only">(current)</span></a> #}
				</li>
				{% if app.user %}
					{% if is_granted('ROLE_ADMIN') %}
						<li
							class="nav-item">
							{# <a class="nav-link" href="{{ path("equipment_new") }}"> #}
							<a class="nav-link" href="#">
								<i class="fas fa-snowboarding"></i>
								Ajout équipement</a>
							{# <a class="nav-link" href="{{ path('trick.index') }}"><i class="fas fa-snowboarding"></i> Tricks</a> #}
						</li>
					{% endif %}
					<li
						class="nav-item">
						{# <a class="nav-link" href="{{ path("users") }}">Profil</a> #}
						<a class="nav-link" href="#">Profil</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="{{ path("app_logout") }}">Déconnexion</a>
					</li>
					<li class="nav-item mt-2">
						<a class="badge badge-light">{{ app.user.username }}</a>
					</li>
				{% else %}
					<li class="nav-item">
						<a class="nav-link" href="{{ path("app_login") }}">Connexion</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="{{ path("app_register") }}">Créer un compte</a>
					</li>
				{% endif %}
			</ul>
		</div>
	</nav>


	{% for type, messages in app.flashes(['success', 'error', 'info'])  %}
		{% for message in messages %}
			<div class="alert alert-{{ type }}" role="alert">
				{{ message }}
			</div>
		{% endfor %}
	{% endfor %}

	{% for type, messages in app.flashes(['success2'])  %}
		{% for message in messages %}
			<div class="alert alert-{{ type }}" role="alert">
				{{ message }}
			</div>
		{% endfor %}
	{% endfor %}
</header>
