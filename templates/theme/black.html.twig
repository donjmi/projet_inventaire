<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>
			{% block title %}Profil
			{% endblock %}
		</title>
		{% block stylesheets %}{% endblock %}
		<link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css"/>
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous"/>
		<script src="https://kit.fontawesome.com/3ea355cd9b.js" crossorigin="anonymous"></script>
		<link rel="stylesheet" type="text/css" href="{{ asset('/css/app.css') }}"/>
	</head>
	<body>
		{% include 'theme/navbar.twig' %}
		{% for message in app.flashes('sucess') %}
			<div class="alert alert-success" role="alert">{{ message }}</div>
		{% endfor %}
		<section class="container-fluid mt-5">
			<main class="row mt-5">
				<div class="col-md-2 navyjim">
					<ul class="nav flex-column">
						<li class="nav-item">
							<a class="nav-link active" href="#">Profil</a>
							{# <a class="nav-link active" href="{{ path('users') }}">Profil</a> #}
							{% block profil %}{% endblock %}
						</li>
						<li class="nav-item">
							<a class="nav-link" href="#">Mon Equipement</a>
							{# <a class="nav-link" href="{{ path('user-biens') }}">Mon Equipement</a> #}
						</li>
					</ul>
				</div>
				<div class="col-md-10"> {% block body %}{% endblock %}
					</div>
				</main>
			</section>
			<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
		</body>
	</html>
